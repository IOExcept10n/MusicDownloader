<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lang="clr-namespace:SUSUProgramming.MusicDownloader.Localization"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SUSUProgramming.MusicDownloader.Views.OnlineServices.AuthorizationFailView">
	<UserControl.Background>
		<ImageBrush Source="/Assets/sad-frog.jpg" Opacity="0.1" Stretch="UniformToFill"/>
	</UserControl.Background>
	<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
		<TextBlock Text="{x:Static lang:Resources.AuthorizationFailed}" FontSize="24"/>
		<Button Content="{x:Static lang:Resources.TryAgain}" 
				Margin="5" 
				HorizontalAlignment="Center"
				Click="Button_Click"/>
	</StackPanel>
</UserControl>
